<GunlukScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 50]
    FloatLayout:
        Label:
             
            size_hint: None, None
            font_size: 34
            height: 50
            width:self.texture_size[0]
            pos_hint: {"top": 1, "center_x": 0.5}

        TextInput:
            id: text_input  # TextInput'a id veriyoruz
            hint_text: "Bügün nasıl hisediyorsun..."
            multiline: True  # Çok satırlı metin girilebilir
            size_hint: 1, 0.5  # Yükseklik için %50
            pos_hint: {"center_x": 0.5, "top": 0.6}
            font_size: 18
            background_color: (192/255, 243/225 ,249/225,186/225)  # Arka plan rengi beyaz
            foreground_color: (0, 0, 0, 1)  # Yazı rengi siyah

        Button:
            text: "Kaydet"
            size_hint: (None, None)
            width: 100
            height: 50
            pos_hint: {"right":1, "button": 0}
            background_color: (144/255, 148/255, 155/255)
            color: (144/255, 148/255, 155/255)
            bold: True
            font_name: "Roboto"
            on_press: 
                # Kullanıcı butona tıkladığında metni kaydetme işlemi yapılabilir
                app.save_journal(text_input.text)  # Kaydetmek için bir fonksiyon ekleyebilirsiniz

        Button:
            text: "Geri"
            size_hint: (None, None)
            width: 50
            height: 50
            background_color: (155/255, 194/255, 201/255)
            color: (155/255, 194/255, 201/255)
            bold: True
            font_name: "Roboto"
            on_press: root.manager.current = 'main_screen'  # MainScreen'e geri dönüş

   